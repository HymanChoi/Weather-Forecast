/**detail.wxss**/

page {
  width: 100%;
  height: 100%;
  background: #f6f6f6;
  color: #fff;
  overflow-y: hidden;
  text-align: center;
}

.container {
  flex-flow: column nowrap;
  width: 100%;
  height: 100%;
  background: linear-gradient(#98a4ff, #52bdf7);
}

.row {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.top {
  width: 100%;
  flex: 0 0 60%;
  text-align: center;
}

.top_tem {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-top: 100rpx;
  font-size: 80rpx;
}

.top_wea {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-top: 32rpx;
  font-size: 48rpx;
}

.top_img_box {
  width: 100%;
  padding-top: 56rpx;
}

.top_img {
  width: 240rpx;
  height: 240rpx;
}

.main {
  width: 100%;
  flex: 0 0 20%;
}

.box {
  flex: 1;
  flex-flow: column nowrap;
  margin: 0 10rpx;
  height: 230rpx;
  border: 1px solid #f6f6f6;
  border-radius: 10rpx;
}

.box_value {
  height: 145rpx;
  line-height: 145rpx;
  font-size: 60rpx;
}

.box_title {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 36rpx;
}

.bottom {
  width: 100%;
  flex: 0 0 20%;
  padding-left: 40rpx;
  text-align: left;
}

.bottom_title {
  font-size: 36rpx;
  padding: 14px 0rpx;
}

.bottom_content {
  font-size: 28rpx;
}
