/**index.wxss**/

page {
  width: 100%;
  height: 100%;
  background: #f6f6f6;
  overflow-y: hidden;
}

.container {
  flex-flow: column nowrap;
  justify-content: top;
  align-items: top;
  width: 100%;
  height: 100%;
}

/* 顶部样式 */
.top {
  width: 100%;
  flex: 0 0 40%;
  background: linear-gradient(#4998e2, #87c1f1);
}
.tem{
  
}

/* 列表样式 */

.list {
  width: 100%;
  flex: 0 0 60%;
}

.list_item {
  display: flex;
  align-items: center;
  height: 75px;
  background: #fff;
}

.list_item_odd {
  background: #f6f9fe;
}

/* 滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
