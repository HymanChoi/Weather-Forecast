<!--index.wxml-->
<view class="container">
  <!-- 顶部信息 -->
  <view class="top" bindtap="goDetail">
    <view class="top_info">{{city}} {{district}}</view>
    <view class="top_date">{{today.date}}</view>
    <view class="row">
      <view class="top_tem">{{today.tem}}</view>
      <view class="top_img_box">
        <image class="top_img" src="{{today.src}}" lazy-load="true"></image>
      </view>
    </view>
    <view class="row">
      <view class="top_week">{{today.week}}</view>
      <view class="top_wea">{{today.wea}}</view>
    </view>
    <view class="top_tem1-2">{{today.tem2}} - {{today.tem1}}</view>
  </view>

  <!-- 列表信息 -->
  <view class="list" style="height:{{scrollHeight}}rpx;">
    <view class="{{index%2 == 0 ? 'list_item list_item_odd' : 'list_item'}}" wx:for="{{restList}}" wx:key="{{index}}">
      <image class="list_item_img" src="{{item.src}}" lazy-load="true"></image>
      <view class="list_item_week">{{item.week}}</view>
      <view class="list_item_tem1">{{item.tem2}}</view> -
      <view class="list_item_tem2">{{item.tem1}}</view>
    </view>
  </view>
</view>